    "dev:watch": "nodemon --exec 'yarn dev'",
    "compose": "docker-compose up -d",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/node": "7.2.2",
    "@babel/preset-env": "7.2.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "eslint": "5.12.0",
    "jest": "23.6.0",
    "micro-dev": "3.0.0"
  },
  "dependencies": {
    "chrome-launcher": "0.10.5",
    "fs-extra": "7.0.1",
    "influx": "5.0.7",
    "lighthouse": "3.0.3",
    "lodash": "4.17.11",
    "micro": "9.3.3",
    "microrouter": "3.1.3",
    "node-cron": "^2.0.3",
    "p-queue": "3.0.0",
    "promx": "1.0.1",
    "serve-handler": "5.0.7",
    "winston": "3.1.0"
  },
  "engines": {
    "node": "^8.10.0 || >=9.10.0",
    "npm": ">= 4.0.0"
  },
  "nodemonConfig": {
    "ext": "js,json",
    "watch": [
      "lib/"
    ],
    "events": {
      "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    }
